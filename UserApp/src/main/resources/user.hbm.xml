<hibernate-mapping>
	<class name="org.jsp.UserApp.User" table="user">
		<id name="id" column="id">
			<generator class="identity" />
		</id>
		<property name="name" column="name" not-null="true" />
		<property name="phone" column="phone" not-null="true"
			unique="true" />
		<property name="email" column="email" not-null="true"
			unique="true" />
		<property name="age" column="age" not-null="true" />
		<property name="gender" column="gender" not-null="true" />
		<property name="password" column="password" not-null="true"></property>
	</class>
</hibernate-mapping>